---
import { Image } from "astro:assets";

interface Props {
  image: ImageMetadata;
}

const { image } = Astro.props;
---

<div class="border border-gray-400">
  <div>
    <Image
      class="h-50 w-full object-cover object-center border-b-brand-500 border-b-4"
      src={image}
      alt="Smiling customer support agent"
      width="400"
      height="200"
    />
  </div>
  <div class="flex flex-col gap-4 pt-4 pb-6 px-8">
    <h3 class="text-2xl text-center font-light leading-tight text-gray-500">
      <slot name="heading" />
    </h3>
    <slot name="content" />
  </div>
</div>
